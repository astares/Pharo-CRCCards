"
A CRCCardTest is a test class for testing the behavior of CRCCard
"
Class {
	#name : 'CRCCardTest',
	#superclass : 'TestCase',
	#instVars : [
		'card'
	],
	#category : 'CRCCards-Core-Tests-Base',
	#package : 'CRCCards-Core-Tests',
	#tag : 'Base'
}

{ #category : 'running' }
CRCCardTest >> setUp [

	super setUp.
	card := CRCCard new





































































































































































































































































































































































]

{ #category : 'tests' }
CRCCardTest >> testEmptyCollaborators [

	self assert: card collaborators isEmpty 

	
]

{ #category : 'tests' }
CRCCardTest >> testEmptyResponsibilities [

	self assert: card responsibilities isEmpty 

	
]

{ #category : 'tests' }
CRCCardTest >> testInitialName [

	self assert: card name equals: 'Unnamed Card'
]

{ #category : 'tests' }
CRCCardTest >> testInstanceCreationByName [ 

	| instance |
	instance := CRCCard named: 'Student'.
	self assert: instance name equals: 'Student'
]
